                    {
                        @Model[i].Name2<br>
                    }
                    @Model[i].Address<br>
                    @Model[i].PostCode @Model[i].Location<br>
                </p>
                <p><a href="@Model[i].Link" target="_blank" rel='noopener'>Mehr zum Standort</a></p>
            </div>
            @if (i < (Model.Count-1))
            {
                <hr class="w-header my-2 w-75 m-auto">
            }
        }





