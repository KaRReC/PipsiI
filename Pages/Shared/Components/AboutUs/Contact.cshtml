@model List<Cit_eTrike.Models.TxtContent>
@{
    String pageRoute = ViewContext.RouteData.Values["page"].ToString();
}
<section class="mb-5 scrollspy wow fadeIn" id="Kontakt">
    <h2 class="h2-responsive font-weight-bold text-center my-4">@Model[0].TextTitle</h2>
    @if (pageRoute != "/ProductPage")
    {
        <p class="text-center w-responsive mx-auto mb-5">@Model[0].Text</p>
    }

    @*<h2 class="h2-responsive font-weight-bold text-center my-4">Kontaktieren Sie uns</h2>
        <p class="text-center w-responsive mx-auto mb-5">Möchten Sie Händler oder Servicepartner werden, haben Sie irgendwelche Fragen? Bitte zögern Sie nicht, uns direkt zu kontaktieren. Unser Team hilft Ihnen gerne weiter.</p>*@
    <div class="row">
        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-1">
            <form id="contact-form" name="contact-form" method="POST" onsubmit="return false">
                @Html.AntiForgeryToken()
                <!--Grid row-->
                <div class="row">
                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="name" name="name" class="form-control" pattern="[A-Za-z0-9 ]+" title="Buchstaben, Zahlen und Leerzeichen" required>
                            <label for="name" class="">Dein Name</label>
                        </div>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="email" id="email" name="email" class="form-control" required>
                            <label for="email" class="">Dein Email</label>
                        </div>
                    </div>
                    <!--Grid column-->
                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <input type="text" id="subject" name="subject" class="form-control" required>
                            <label for="subject" class="">Thema</label>
                        </div>
                    </div>
                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">
                    <!--Grid column-->
                    <div class="col-md-12">
                        <div class="md-form">
                            <textarea type="text" id="message" name="message" rows="6" class="form-control md-textarea" required></textarea>
                            <label for="message">Deine Nachricht</label>
                        </div>
                    </div>
                </div>
                <!--Grid row-->
                <div class="text-center text-md-left">
                    <button type="submit" class="btn btn-outline-primary waves-effect" id="SendButton" onclick="Send();"><i class="fas fa-paper-plane" id="PPlane"></i>&nbsp; Senden</button>
                </div>
            </form>

            <div id="statusMsg" class=""></div>
        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-md-3 text-center mt-4">
            <ul class="list-unstyled mb-0">
                @for (var i = 1; i < Model.Count; i++)
                {
                    <li class="GreenTxt">
                        @Html.Raw(@Model[i].HTMLDecoration)
                        <p class="text-dark font-weight-bold">
                            @Model[i].Text
                        </p>
                    </li>
                }

                @*<ul class="list-unstyled mb-0">
                        <li>
                            <i class="fas fa-map-marker-alt fa-2x"></i>
                            <p>
                                Friesestraße 21,
                                02681 Schirgiswalde-Kirschau
                            </p>
                        </li>
                        <li>
                            <i class="fas fa-phone mt-4 fa-2x"></i>
                            <p>+ 01 234 567 89</p>
                        </li>
                        <li>
                            <i class="fas fa-envelope mt-4 fa-2x"></i>
                            <p>info@cit-etrike.de</p>
                        </li>
                    </ul>*@
            </ul>
        </div>
        <!--Grid column-->
    </div>

</section>