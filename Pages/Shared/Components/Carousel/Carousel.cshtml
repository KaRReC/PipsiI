@model List<Cit_eTrike.Models.eTrikeCarousel>
<section class="text-center mt-5 scrollspy wow fadeIn" id="Products">
    <h2 class="h2 font-weight-bold text-center mb-5">Unsere eTrikes</h2>
    <!-- Top content -->
    <div class="top-content">
        <div class="container ">
            <div id="carousel-example" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner row w-100 mx-auto" role="listbox">
                    @{
                        string active = "active";
                    }
                    @for (var i = 0; i < Model.Count(); i++)
                    {
                        //string active = "active";
                        if (i > 0)
                        {
                            active = "";
                        }

                        <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-4 @active mb-5">
                            <!--Card-->
                            <div class="card">
                                <!--Card image-->
                                <div class=" overlay">
                                    <img data-src="@Model[i].ImgSrc" class="card-img-top" alt="etrike">
                                </div>
                                <!--Card content-->
                                <div class="card-body">
                                    <!--Name-->
                                    <div class="CardCatHeader">
                                        <div class="alignCenter">
                                            <h4 class="card-title font-weight-bold green-text"> @Model[i].CategoryName</h4>
                                        </div>                                        
                                    </div>
                                    <hr class="w-50">
                                    <!--Text-->
                                    <div class="CardPresTxt">
                                        <p class="card-text">
                                            <span>@Html.Raw(@Model[i].PresentationTxt)</span><span class="blue-text font-weight-bold"> @Model[i].Price</span> @Model[i].TaxTxt
                                        </p>
                                    </div>
                                    <div class="card-footer mt-4">
                                        <p class="card-text pt-1">
                                            <a asp-page="CategoryPage" asp-route-id="@Model[i].IdCategory"><strong class="blue-text font-weight-bold">Mehr aus der Kategorie <i class="fas fa-external-link-square-alt"></i></strong></a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <!--/.Card-->
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carousel-example" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-example" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</section>