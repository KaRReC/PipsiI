@page
@model Cit_eTrike.Pages.LoginPageModel
@{
    Layout = null;
    string domainName = HttpContext.Request.PathBase.Value.ToString();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LoginPage</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" async>
    <!-- Material Design Bootstrap -->
    <link rel="stylesheet" href="~/lib/MDB-Free_4.10.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/MDB-Free_4.10.1/css/mdb.min.css" />
    <link rel="stylesheet" href="~/css/Admin/Login.css" />
</head>
<body style="background-image: url('@domainName/images/LoginBG.jpg');">
    <!-- Main navigation -->
    <div class="container-fluid mt-3 mb-5">

        <!-- Full Page Intro -->
        <section>
            <!-- Mask & flexbox options-->
            <div class="mask d-flex justify-content-center align-items-center">
                <!-- Content -->
                <div class="container py-5 my-5 ">
                    <!--Grid row-->
                    <div class="row d-flex align-items-center justify-content-center">
                        <!--Grid column-->
                        <div class="col-md-6 col-xl-5 mt-5">
                            <!--Form--> @*onsubmit="return false"*@
                            <div class="card mt-5">
                                <div class="card-body z-depth-2 px-4">
                                    <form id="Login-form" name="Login-form" method="POST">
                                        <div class="md-form mt-3">
                                            <i class="fas fa-user-tie prefix"></i>
                                            <input type="text" asp-for="loginData.Username" id="form3" class="form-control" required>
                                            <label for="form3">Login</label>
                                        </div>
                                        <div class="md-form">
                                            <i class="fas fa-key prefix"></i>
                                            <input type="password" asp-for="loginData.Password" id="form4" class="form-control" required>
                                            <label for="form4">Your password</label>
                                        </div>
                                        <div class="text-center my-4 font-weight-bold">
                                            <button class="btn blue-gradient btn-block" id="LogIn">Log In</button>
                                        </div>
                                        <div asp-validation-summary="All" class="text-dark font-weight-bold"></div>
                                        @Html.AntiForgeryToken()
                                    </form>
                                </div>
                            </div>
                            <!--/.Form-->
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->
                </div>
                <!-- Content -->
            </div>
            <!-- Mask & flexbox options-->
        </section>
        <!-- Full Page Intro -->

    </div>
    <!-- Main navigation -->
    <!-- JQuery -->
    <script type="text/javascript" src="~/lib/MDB-Free_4.10.1/js/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="~/lib/MDB-Free_4.10.1/js/popper.min.js"></script>
    @*<script type="text/javascript" src="~/lib/fontawesome-free-5.11.2-web/js/all.js"></script>*@

    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="~/lib/MDB-Free_4.10.1/js/bootstrap.min.js"></script>

    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="~/lib/MDB-Free_4.10.1/js/mdb.min.js"></script>
</body>
</html>
